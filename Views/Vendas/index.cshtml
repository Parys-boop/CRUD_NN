@model IEnumerable<VendasMvc.Models.Venda>
@{
    ViewData["Title"] = "Vendas";
}
<h1>Vendas</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Nova Venda</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Cliente</th>
            <th>Total</th>
            <th>Itens</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Id</td>
                <td>@v.Data.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@v.Cliente?.Nome</td>
                <td>@v.Total.ToString("C")</td>
                <td>@v.Itens.Count()</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@v.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
